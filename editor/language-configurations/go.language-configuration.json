{
    "comments": {
        "lineComment": "//",
        "blockComment": [ "/*", "*/" ]
    },
    "brackets": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"]
    ],
    "autoClosingPairs": [
        { "open": "{", "close": "}", "notIn": ["string"] },
        { "open": "[", "close": "]", "notIn": ["string"] },
        { "open": "(", "close": ")", "notIn": ["string"] },
        { "open": "'", "close": "'", "notIn": ["string"] },
        { "open": "\"", "close": "\"", "notIn": ["string", "comment"] },
        { "open": "`", "close": "`", "notIn": ["string", "comment"] }
    ],
    "surroundingPairs": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"],
        ["'", "'"],
        ["\"", "\""],
        ["`", "`"]
    ],
    "folding": {
        "markers": {
            "start": "\\b{\\b",
            "end": "\\b}\\b"
        }
    }
}